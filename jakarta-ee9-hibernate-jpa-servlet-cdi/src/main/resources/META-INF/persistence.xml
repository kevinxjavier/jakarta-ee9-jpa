<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
	
	<!-- transaction-type="RESOURCE_LOCAL" is this value because Tomcat is not an "Enterprise Java Beans Server"
	that means it can not handle transacions due it is a WebServer not an ApplicationServer -->
    <persistence-unit name="mysqlConnecion" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>com.kevinpina.model.entities.Category</class>
		<class>com.kevinpina.model.entities.Product</class>
		<!-- if "true" the entity classes must be mapped like above, because if is not will throw an Exception -->
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<!-- JEE "8" -->
			<!--property name="javax.persistence" value="" />-->
	
			<!-- Jakarta "9" -->	
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/database?serverTimezone=Europe/Madrid" />
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password" value="*****" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- Create and Drop database always, will execute the @Entity classes and resources/import.sql file in the Database -->
<!-- 			<property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" /> -->
		</properties>
	</persistence-unit>
	
</persistence>
